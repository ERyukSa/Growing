<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dayTextStyle" parent="Widget.AppCompat.TextView" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="calendarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="motivationTitleStyle" parent="calendarTitleStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="dialogButtonOk" parent="Widget.AppCompat.Button" >
        <item name="android:background">@drawable/background_button_round</item>
        <item name="android:backgroundTint">@color/button_ok</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="dialogButtonCancel" parent="@style/dialogButtonOk">
        <item name="android:backgroundTint">@color/button_cancel</item>
    </style>

    <style name="TimePickerStyle" parent="ThemeOverlay.MaterialComponents.TimePicker" >
        <item name="colorControlNormal">@color/grey_date</item>
    </style>
    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="colorAccent">@color/grey_selected</item>
    </style>

    <style name="youtubeListChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinHeight">28dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
        <item name="android:textSize">13sp</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="addTodoDialogAnimation80">
        <item name="android:windowEnterAnimation">@animator/anim_in_80</item>
    </style>
